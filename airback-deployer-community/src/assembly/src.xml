<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>src</id>
    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>${project.groupId}:airback-parent-community:pom</include>
                <include>${project.groupId}:airback-core</include>
                <include>${project.groupId}:airback-dao</include>
                <include>${project.groupId}:airback-config</include>
                <include>${project.groupId}:airback-template</include>
                <include>${project.groupId}:airback-test</include>
                <include>${project.groupId}:airback-localization</include>
                <include>${project.groupId}:airback-caching</include>
                <include>${project.groupId}:airback-jackrabbit</include>
                <include>${project.groupId}:airback-migration</include>
                <include>${project.groupId}:airback-services</include>
                <include>${project.groupId}:airback-esb</include>
                <include>${project.groupId}:airback-reporting</include>
                <include>${project.groupId}:airback-scheduler</include>
                <include>${project.groupId}:airback-scheduler-community</include>
                <include>${project.groupId}:airback-servlet</include>
                <include>${project.groupId}:airback-web</include>
                <include>${project.groupId}:airback-server-runner</include>
                <include>${project.groupId}:airback-services-community</include>
                <include>${project.groupId}:airback-web-community</include>
                <include>${project.groupId}:airback-app-community</include>
            </includes>
            <sources>
                <fileSets>
                    <fileSet>
                        <excludes>
                            <exclude>**/.idea/**</exclude>
                            <exclude>**/.settings/**</exclude>
                            <exclude>**/target/**</exclude>
                            <exclude>**/repo/**</exclude>
                            <exclude>**/repo2/**</exclude>
                            <exclude>**/repo-test/**</exclude>
                            <exclude>**/wiki-repo-test/**</exclude>
                            <exclude>**/bin/**</exclude>
                            <exclude>**/*.log</exclude>
                            <exclude>**/*.out*</exclude>
                            <exclude>**/.classpath</exclude>
                            <exclude>**/.project</exclude>
                            <exclude>**/.settings/**</exclude>
                            <exclude>**/.springBeans</exclude>
                            <exclude>**/nb-configuration.xml</exclude>
                            <exclude>**/proguard.conf</exclude>
                            <exclude>**/.gitignore</exclude>
                            <exclude>**/*.versionsBackup</exclude>
                            <exclude>**/*.iml</exclude>
                            <exclude>**/*.scss</exclude>
                        </excludes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <outputDirectory>airback-deployer-community</outputDirectory>
            <excludes>
                <exclude>**/.settings/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/.gitignore</exclude>
                <exclude>**/*.versionsBackup</exclude>
                <exclude>**/*.iml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>